<% if @park %>
  <%= render partial: "shared/new-park-header", locals: {park: @park, score: @score} %>

  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div class="park-about">
          <h2 style="text-align: center">ABOUT</h2>
          <p>Park Type: <%= @park["parktype"] %></p>
          <p>Evaluation Score: <%= @score %></p>
          <p>Zip Code: <%= @park["zipcode"] %></p>
        </div>

        <div class="park-about">
          <h2 style="text-align: center">FEATURES</h2>
          <br>
        </div>
      </div>

      <div class="col-sm-7">
        <div class="park-about">
          <h2 style="text-align: center">WHAT PEOPLE SAY</h2><br><br><br><br><br><br><br><br><br><br>
        </div>
      </div>

    </div>
  </div>
<% else %>
  <h2>Sorry, no park was found by that name.</h2>
<% end %>